{
  "name": "lumalayout",
  "version": "1.0.0",
  "description": "Professional film and photography lighting diagram app",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "dist": "vite build && electron-builder --win --publish never",
    "preview": "vite preview",
    "vite": "vite",
    "electron": "electron ."
  },
  "keywords": [],
  "author": "fairlyOdd L.L.C",
  "license": "MIT",
  "dependencies": {
    "jspdf": "^4.2.0",
    "konva": "^9.3.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^18.2.10",
    "use-image": "^1.1.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.lumalayout.app",
    "productName": "LumaLayout",
    "icon": "build/icon",
    "directories": {
      "output": "dist-electron"
    },
    "extraResources": [
      {
        "from": "ICON.png",
        "to": "ICON.png"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "artifactName": "LumaLayout.Setup.${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "publisherName": "fairlyOdd L.L.C"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "icons/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  }
}
